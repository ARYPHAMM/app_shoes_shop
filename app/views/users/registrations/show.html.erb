<div class="container">
  <h1 align="center">P r o f i l e</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th class="showprofile " colspan="3"><%= image_tag(@user.avatar,class: "img",id: "a")%></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th colspan="3" class="showprofile ">First name : <%= @user.firstname %></th>
      </tr>
      <tr>
        <th colspan="3" class="showprofile ">Last name : <%= @user.lastname %></th>
      </tr>
      <tr>
        <th colspan="3" class="showprofile ">Gender : <%= @user.gender == false ? "Female" : "Male" %></th>
      </tr>
      <tr>
        <th colspan="3" class="showprofile ">Address : <%= @user.address %></th>
      </tr>
      <tr>
        <th colspan="3" class="showprofile ">Phone : <%= @user.phone %></th>
      </tr>
      <tr>
        <th colspan="3" class="showprofile ">Email : <%= @user.email %></th>
      </tr>
       <tr>
        <th colspan="3" class="showprofile "><%= link_to "Edit Profile",edit_user_registration_path,class: "btn btn-primary"  %></th>
      </tr>
    </tbody>
  </table>
</div>
