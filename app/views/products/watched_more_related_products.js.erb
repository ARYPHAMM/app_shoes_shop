
'<% @Related_products.each do |product|%>'
$("#more_related_products > div > div").append("<div class='owl-item ' style='width: 262.5px; margin-right: 10px;'><div class='card' style='width: 100%; height: 18rem'> <img  alt='Product' class='card-img-top' src=<%=url_for(product.images[0])%>   /> <%= escape_javascript  link_to 'View Detail',product_path(:name =>product.name),class: 'show_detail' %>  <div class='card-body'> <p class='card-text d-inline product-name'><strong><%= product.name %></strong></p> <p class='card-text d-inline product-price'><strong>$<%= product.price %></strong></p> </div> </div></div>");
'<% end %>'

'<% if @Related_products.count <= 3 %>'
$('.scrollbar-Related > div:last-child').remove();
'<% end %>'


var $owl = $('.owl-carousel');
$owl.trigger('destroy.owl.carousel');
$owl.html($owl.find('.owl-stage-outer').html()).removeClass('owl-loaded');
owl.owlCarousel({
    loop: false,
    margin: 10,
    nav: true,
    item: 4,
    dots: false,
    autoplay: false,
    autoplayTimeout: 1000,
    autoplayHoverPause: true,
    navText: ["<i class='fa fa-angle-left fa-2x' aria-hidden='true'></i>", " <i id=loadrelated class='fa fa-angle-right fa-2x' aria-hidden='true'></i>"],
    responsive: {
        0: {
            items: 1
        },
        600: {
            items: 2
        },
        1000: {
            items: 4
        }
    }
});
$('.play').on('click', function() {
    owl.trigger('play.owl.autoplay', [1000])
})
$('.stop').on('click', function() {
    owl.trigger('stop.owl.autoplay')
})


$("#loadrelated").trigger("click");