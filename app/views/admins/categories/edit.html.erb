<%= render 'layouts/adminshome' %>
<div class="container">
    <div class="panel panel-success">
        <div class="panel-heading"><strong style="font-size:20px">Editing Category</strong></div>
        <div class="panel-body">

            <%= form_for @category1 do |f| %>
            
            <div class="form-inputs">
                <%= f.text_field :name %>
                <%= f.text_field :description %>
            </div>

            <div class="form-actions">
                <%= f.button :submit %>
            </div>
            <% end %>
            <%= link_to 'Show', @category1 %> |
            <%= link_to 'Back', admins_categories_path %>
        </div>
    </div>
</div>

</div>