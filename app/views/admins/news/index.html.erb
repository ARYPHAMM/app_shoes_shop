<p id="notice"><%= notice %></p>
<h1>News</h1>
<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
    <tr>
      <td><% news.products.each do |v| %>
        <h3> <span class="badge badge-secondary"><%=
          v.name
        %></span></h3>
      <% end %></td>
      <td><%= raw news.title.gsub!(%r{</?[^>]+?>},'')[0..300].insert(0, '<span>').insert(-1, '...</span>').gsub(/&nbsp;/i,"") %></td>
      <td><%= raw news.body.gsub!(%r{</?[^>]+?>},'')[0..300].insert(0, '<span>').insert(-1, '...</span>').gsub(/&nbsp;/i,"") %></td>
      <td><%= link_to 'Show', admins_news_path(news) %></td>
      <td><%= link_to 'Edit', edit_admins_news_path(news) %></td>
      <td><%= link_to 'Destroy', admins_news_path(news), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Create a news',new_admins_news_path,class: "btn btn-primary"  %>