<% if @product.errors.any? %>
<div class="alert alert-danger">
	<ul>
		<% @product.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="container">
	<div class="product-form">
		<h1 class="text-center">
		<%= Product %>
		</h1>
		<%= form_for [:admins,@product] , html: { multipart: true } do |f| %>
		<p style="padding:2px">Name</p>
		<%= f.text_field :name, class: 'form-control',placeholder: "Product Name",maxlength:"30",minlength:"3",required:"required"%><br>
		<p style="padding:2px">Price</p>
		<%= f.text_field :price, type: "number", class: 'form-control',placeholder: "Price",required:"required"%><br>
		<p style="padding:2px">Category</p>
		<%= f.collection_select(:category,Category.all, :id, :name, {:prompt=>true}, {:class=>'form-control'}) %><br>
		<%= f.fields_for :stocks do |stock| %>
		  <%= render "stock_fields", f: stock %>
		<% end %>
		<div class="links">
		  <%= link_to_add_association 'Add Stock', f, :stocks %>
		</div>
		<p style="padding:2px">Description</p>
		<%= f.text_area :description, class: "form-control", placeholder:"Description" ,maxlength:"100",minlength:"20",required:"required"%>
		<p style="padding:2px">Image</p>
		<label class="btn btn-block btn-primary">
				Browse&hellip; <%= f.file_field :images, multiple: true ,id: "imagetsask",required: "required" %>
			</label>
		<div class="form-group">
			<div>
				<span id="imagetaskss"></span>
			</div>
		</div>
		<div class="form-actions">
		  <%= f.submit 'Create', class: 'btn btn-success btn-block' %>
		</div>
		</div>
		<% end %>
		<% if @product.new_record? == false %>
		<div class="form-group">
			<% i = 0 %>
			<% @product.images.each do |image| %>
			<%= image_tag image ,class: "imgtask", style: "width: 50%" %>
			<%= link_to "x",images_path(:product => @product.id,:images => i), method: :delete, data: {dismiss: "alert", confirm: "Are you sure you want to delete the user?"},class: "btn btn-md btn-danger"
			%>
			<% i = i + 1 %>
			<br>
			<% end %>
		</div>
		<% end %>
	</div>
</div>
