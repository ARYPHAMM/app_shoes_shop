var count_message = 1;
$("#loadmessage").click(function() {
    count_message = count_message + 5;
    var user_id = "<%= current_user.id %>";
    $.ajax({
        url: "/messages/watchedmore",
        type: "post",
        dataType: "script",
        data: {
