<%= form_for @payment do |f| %>
    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, :size => 40 %>
    </div>
    <div class="field">
        <%= f.label :phone %><br>
        <%= f.text_field :phone, :size => 40 %>
    </div>
    <div class="field">
        <%= f.label :address %><br>
        <%= f.text_area :address, :rows => 3, :cols => 40 %>
    </div>
    
    <div class="field">
        <%= f.select :pay_type, Payment.pay_types.keys %>
    </div>
    <div class="actions">
        <%= f.submit 'Place order' %>
    </div>
<% end %>
