<div class="container-fluid">
	<div class="row">
		<div class="col-lg-4">
			<h2>News category</h2>
			<% NewsTypeForShoe.all.each { |v| %>
			<ul class="list-group">
				<li class="list-group-item"><%= v.name %><span class="badge float-right"><%= v.new.count %></span></li>
			</ul>
			<% } %>
		</div>
		<div  class="col-lg-8">
			<div class="body-news">
				<%= raw @item.body %>	
			</div>
		</div>
	</div>
	<br>
	<script type="text/javascript">
		$(".main-news img").removeAttr('style');
		$(".news_before img").removeAttr('style');
	</script>