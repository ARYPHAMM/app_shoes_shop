<div class="container-fluid">
<p id="notice"><%= notice %></p>
<h1>Categories</h1>
<%= link_to 'New Category', new_category_path,class: "btn btn-primary btn-md" %>
<div class="content-box-large table-responsive">
    <div class="panel-body">
      <table id="example" class="display" width="100%">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>display_in_navbar</th>
            <th>Create At</th>
            <th>Update At</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
            <tr class="gradeC">
                <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= category.display_in_navbar %></td>
              <td><%= category.created_at.localtime %></td>
              <td><%= category.updated_at.localtime %></td>
              <td><%= link_to '', category,class: "btn btn-info fas fa-eye" %></td>
          <td><%= link_to '', edit_category_path(category),class: "btn btn-warning fas fa-edit" %></td>
          <td>
            <%= link_to '', category, method: :delete,class: "btn btn-danger far fa-trash-alt", data: { confirm: 'Are you sure?' } %>
          </td>
            </tr>
          <% end %>
        
        </tbody>
      </table>
    </div>
  </div>
</div>